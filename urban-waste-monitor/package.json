{
  "name": "urban-waste-monitor",
  "version": "1.0.0",
  "description": "Open Source Urban Waste Monitoring System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run simulator\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "simulator": "cd simulator && npm start",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "db:start": "docker-compose -f docker-compose.dev.yml up -d",
    "db:setup": "cd server && npm run db:setup",
    "db:stop": "docker-compose -f docker-compose.dev.yml down"
  },
  "keywords": ["waste-management", "iot", "smart-city", "open-source"],
  "author": "Urban Waste Monitor Contributors",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}